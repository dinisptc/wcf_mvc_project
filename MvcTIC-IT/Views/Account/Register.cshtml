@model MvcTIC_IT.Models.RegisterModel

@{
    ViewBag.Title = "Register";
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
    <h2>@ViewRes.Account.useformcreate</h2>
</hgroup>

<p class="message-info">
@ViewRes.Account.newpasswords @Membership.MinRequiredPasswordLength @ViewRes.Account.caracteres 
</p>

<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

@using (Html.BeginForm((string)ViewBag.FormAction, "Account")) {
    @Html.ValidationSummary(true,@ViewRes.Account.account)

    <fieldset>
        <legend>@ViewRes.Account.formderegisto</legend>
        <ol>
            <li>

                @ViewRes.Account.username
              
                @Html.TextBoxFor(m => m.UserName)
                @Html.ValidationMessageFor(m => m.UserName)
            </li>
            <li>
                       @ViewRes.Account.email
                @Html.TextBoxFor(m => m.Email)
                @Html.ValidationMessageFor(m => m.Email)
            </li>
            <li>

                   @ViewRes.Account.password
        
                @Html.PasswordFor(m => m.Password)
                @Html.ValidationMessageFor(m => m.Password)
            </li>
            <li>

                   @ViewRes.Account.confirmpassword
          
                @Html.PasswordFor(m => m.ConfirmPassword)
                @Html.ValidationMessageFor(m => m.ConfirmPassword)
            </li>
        </ol>
        <input type="submit" value="@ViewRes.Account.register" />
    </fieldset>
}
