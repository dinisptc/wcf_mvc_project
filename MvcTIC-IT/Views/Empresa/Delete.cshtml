@model MvcTIC_IT.ServiceRefPortugal.empresa

@{
    ViewBag.Title = ViewRes.Empresa.apagar;
}

<h2>@ViewRes.Empresa.apagar</h2>

<h3>@ViewRes.Empresa.temacerteza</h3>


<fieldset>
    

    <center>
       <img src="/pt-PT/empresa/ThumbImoveis/@Model.logo" alt="logo"/>
    </center>


    <div class="display-label">
        @ViewRes.Empresa.nomedaempresa
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.nome_da_empresa)
    </div>

    <div class="display-label">
        @ViewRes.Empresa.url
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.url)
    </div>

    <div class="display-label">
        @ViewRes.Empresa.contacto
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.contacto)
    </div>
</fieldset>

<br />
<br />

@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="@ViewRes.Empresa.apagar" /> |
         @Html.ActionLink(@ViewRes.Empresa.voltaparalista, "Index")
    </p>
}

<br />
<br />

